<form class="needs-validation" novalidate action="/login" method="post">
  <div class="form-group form-row">
    <div class="col">
      <label for="email">Email address</label>
      <input id="email" class="form-control" type="email" name="email" placeholder="Enter email" value="{{fields.email}}" required autocomplete="username">
      <div class="invalid-feedback">Please provide a valid email address.</div>
    </div>
  </div>
  <div class="form-group form-row">
    <div class="col">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Password" value="{{fields.password}}" required autocomplete="current-password">
      <div class="invalid-feedback">Please provide a valid password.</div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
  <button class="btn btn-primary" id="btnSpin" type="button" style="visibility:hidden" disabled>
    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
    Saving...
  </button>
</form>
