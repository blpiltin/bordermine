{
  "edit_company_info": {
    "action": "{{user.editPath}}/company{{#if fields.id}}/{{fields.id}}/info{{/if}}",
    "method": "post",
    "submit": "Save",
    "enctype": "multipart/form-data",
    "fields": {
      "name": {
        "type": "text",
        "label": "Name",
        "placeholder": "Enter the company name",
        "required": true,
        "requiredError": "Please enter a valid company name. Valid names begin with letters and can only include letters, numbers, underscores, dashes and spaces.",
        "pattern": "^[A-Za-z]+((\\w|\\d|-|\\s)*[a-zA-Z0-9]+)*$"
      },
      "logo": {
        "type": "file",
        "accept": "image/*",
        "label": "Logo",
        "placeholder": "Select a logo",
        "pattern": "[0-9a-zA-Z\\._-]+\\.(bmp|BMP|png|PNG|gif|GIF|jp[e]?g|JP[E]?G)",
        "patternError": "Only image (.bpm, .png, .gif, and .jpg) file types allowed."
      }
    }
  }
}