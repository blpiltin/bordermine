{
  "edit_company_info": {
    "action": "{{user.editPath}}/company{{#if fields.id}}/{{fields.id}}/info{{/if}}",
    "method": "post",
    "submit": "Save",
    "enctype": "multipart/form-data",
    "fields": {
      "type": {
        "type": "select",
        "label": "Type",
        "placeholder": "Select one of the following...",
        "required": true,
        "requiredError": "Please select a company type.",
        "options": {
          "broker": "I represent a broker or agent",
          "carrier": "I represent a carrier or shipper"
        }
      },
      "name": {
        "type": "text",
        "label": "Name",
        "placeholder": "Enter the company name",
        "required": true,
        "requiredError": "Please enter a company name."
      },
      "address": {
        "type": "json",
        "fields": {
          "line1": {
            "type": "text",
            "label": "Address Line 1",
            "placeholder": "Enter the address line 1",
            "required": true,
            "requiredError": "Please enter the address line 1."
          },
          "line2": {
            "type": "text",
            "label": "Address Line 2",
            "placeholder": "Enter the address line 2"
          },
          "city": {
            "type": "text",
            "label": "City",
            "placeholder": "Enter the city",
            "required": true,
            "requiredError": "Please enter the city."
          },
          "state": {
            "type": "text",
            "label": "State or Province",
            "placeholder": "Enter the state or province",
            "required": true,
            "requiredError": "Please enter the state or province."
          },
          "postalCode": {
            "type": "text",
            "label": "Postal Code",
            "placeholder": "Enter the postal or zip code",
            "required": true,
            "requiredError": "Please enter the postal or zip code."
          },
          "country": {
            "type": "text",
            "label": "Country",
            "placeholder": "Enter the country",
            "required": true,
            "requiredError": "Please enter the country."
          }
        }
      },
      "logo": {
        "type": "file",
        "accept": "image/*",
        "label": "Logo",
        "placeholder": "Select a logo",
        "pattern": "[0-9a-zA-Z\\._-]+\\.(bmp|BMP|png|PNG|gif|GIF|jp[e]?g|JP[E]?G)",
        "patternError": "Only image (.bpm, .png, .gif, and .jpg) file types allowed."
      }
    }
  }
}