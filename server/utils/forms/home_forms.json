{
  "join": {
    "action": "/join",
    "method": "post",
    "fields": {
      "profile.firstName": {
        "type": "text",
        "label": "Primary First Name",
        "autocomplete": "given-name",
        "placeholder": "Enter first name",
        "required": true,
        "requiredError": "Please enter a primary contact first name."
      },
      "profile.lastName": {
        "type": "text",
        "label": "Primary Last Name",
        "autocomplete": "family-name",
        "placeholder": "Enter last name",
        "required": true,
        "requiredError": "Please enter a primary contact last name."
      },
      "email": {
        "type": "email",
        "label": "Primary Email",
        "autocomplete": "username",
        "placeholder": "Enter email address",
        "required": true,
        "requiredError": "Please enter a valid email address.",
        "pattern": "[\\w-]+@([\\w-]+\\.)+[\\w-]+"
      },
      "company.name": {
        "type": "text",
        "label": "Company name",
        "placeholder": "Enter a company name",
        "required": true,
        "requiredError": "Please enter a company name."
      },
      "company.address1": {
        "type": "text",
        "label": "Company Address 1",
        "placeholder": "Enter company address line 1",
        "required": true,
        "requiredError": "Please enter company address line 1."
      },
      "company.address2": {
        "type": "text",
        "label": "Company Address 2",
        "placeholder": "Enter company address line 2"
      },
      "company.city": {
        "type": "text",
        "label": "Company City",
        "placeholder": "Enter company city",
        "required": true,
        "requiredError": "Please enter company city."
      },
      "company.state": {
        "type": "text",
        "label": "Company State or Province",
        "placeholder": "Enter company state",
        "required": true,
        "requiredError": "Please enter company state."
      },
      "company.country": {
        "type": "text",
        "label": "Company Country",
        "placeholder": "Enter company country",
        "required": true,
        "requiredError": "Please enter company country."
      },
      "password": {
        "type": "password",
        "label": "Password",
        "autocomplete": "new-password",
        "placeholder": "Enter a password",
        "required": true,
        "requiredError": "Please provide a password that contains at least one letter, one number, and is at least 6 characters long. !,^,+,?,_,&,@ characters are allowed.",
        "pattern": "^(?=.*[0-9]+.*)(?=.*[a-zA-Z]+.*)[0-9a-zA-Z!\\^\\+\\?_&@]{6,}$"
      },
      "passwordConfirm": {
        "type": "password",
        "label": "Password Confirm",
        "placeholder": "Enter password confirmation",
        "required": true,
        "requiredError": "Please provide a password confirmation.",
        "matches": "password",
        "matchesError": "Passwords do not match. Please provide a matching password confirmation."
      },
      "role": {
        "modelOnly": true,
        "type": "select",
        "label": "Role",
        "placeholder": "Select one of the following...",
        "required": true,
        "requiredError": "Please select a role.",
        "options": {
          "root": "root",
          "admin": "admin",
          "user": "user"
        }
      }
    }
  },
  "login": {
    "action": "/login",
    "method": "post",
    "fields": {
      "email": {
        "type": "email",
        "label": "Email address",
        "autocomplete": "username",
        "placeholder": "Enter your email",
        "required": true,
        "requiredError": "Please provide a valid email address."
      },
      "password": {
        "type": "password",
        "label": "Password",
        "autocomplete": "current-password",
        "placeholder": "Enter your password",
        "required": true,
        "requiredError": "Please provide a valid password."
      }
    }
  },
  "email": {
    "action": "/email",
    "method": "post",
    "fields": {
      "email": {
        "type": "email",
        "label": "Email address",
        "autocomplete": "username",
        "placeholder": "Enter your email",
        "required": true,
        "requiredError": "Please provide a valid email address."
      }
    }
  },
  "password": {
    "action": "/password",
    "method": "post",
    "fields": {
      "email": {
        "type": "email",
        "label": "Email address",
        "autocomplete": "username",
        "placeholder": "Enter your email",
        "required": true,
        "requiredError": "Please provide a valid email address.",
        "pattern": "[\\w-]+@([\\w-]+\\.)+[\\w-]+"
      },
      "password": {
        "type": "password",
        "label": "Password",
        "autocomplete": "new-password",
        "placeholder": "Enter a password",
        "required": true,
        "requiredError": "Please provide a password that contains at least one letter, one number, and is at least 6 characters long. !,^,+,?,_,&,@ characters are allowed.",
        "pattern": "^(?=.*[0-9]+.*)(?=.*[a-zA-Z]+.*)[0-9a-zA-Z!\\^\\+\\?_&@]{6,}$"
      },
      "passwordConfirm": {
        "type": "password",
        "label": "Password Confirm",
        "placeholder": "Enter password confirmation",
        "required": true,
        "requiredError": "Please provide a password confirmation.",
        "matches": "password",
        "matchesError": "Passwords do not match. Please provide a matching password confirmation."
      }
    }
  }
}